</div>



<form class="comment-container" action="/comment" method="POST">
<input type="hidden" value="{{singleChore._id}}" name="choreId" />
    <input class="comment-name" type="text" placeholder="Name"  name="name">

    <br>

    {{!-- <label>Comment:</label> --}}
    <textarea class="comment-textarea" name="comment" placeholder="Your comment..." cols="21" rows="6"></textarea>
    <br>
    <input type="submit" value="Create" >
</form>

</div>

{{#each comments}}
<div class="title"> {{name}}</div>
<div class="title">{{comment}}</div>
<form action="/comment/{{_id}}?_method=DELETE" method="POST">
    <input type="submit" value="Delete">
</form>

<hr>
{{/each}}