<a href="/user/{{singleUser._id}}/edit">
    <button>
        Edit
    </button>
</a>

<div class="title">Name</div>
{{singleUser.name}}


<div class="title"></div>
<img src="{{singleUser.image}}"/>
<form action="/user/{{singleUser._id}}?_method=DELETE" method="POST">
    <input type="submit" value="Delete">
</form>


<form action="/chore" method="POST">
  <input type="hidden" value="{{singleUser._id}}" name="userId" />
    <label>Type Of Chore</label>
    <input type="text" name="type"/>

    <label>Scheduled for:</label>
    <input type="date" name="when"/>

    <input type="submit" value="Add">
</form>



<h1>House Chores</h1>
{{#each chores}}
<div class="title">Chore Type: {{type}}</div>
<div class="title">Scheduled For: {{when}}</div>
<form action="/chore/{{_id}}?_method=DELETE" method="POST">
    <input type="submit" value="Delete">
</form>
<hr>
{{/each}}

<form action="/comment" method="POST">
<input type="hidden" value="{{singleUser._id}}" name="userId" />
    <input type="text" placeholder="Name"  name="name">

    <br>

    <label>Comment:</label>
    <textarea name="comment"  cols="20" rows="5"></textarea>
    <input type="submit" value="Create" >
</form>


{{#each singleComment}}
<div class="title"> {{name}}</div>
<div class="title">{{comment}}</div>
<form action="/comment/{{_id}}?_method=DELETE" method="POST">
    <input type="submit" value="Delete">
</form>
<hr>
{{/each}}